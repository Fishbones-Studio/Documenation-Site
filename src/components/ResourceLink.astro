---
/**
 * @typedef {object} Props
 * @property {string} href - The URL for the link.
 * @property {string} [icon] - The name of the Bootstrap icon to display (optional).
 */

const { href, icon } = Astro.props;
const BOOTSTRAP_ICONS_URL = 'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/icons';

---
<a href={href} class="resource-link">
  <span
    class="icon"
    style={icon ? `background-image: url('${BOOTSTRAP_ICONS_URL}/${icon}.svg')` : undefined}
  /> <!-- Todo: switch icon colour based on light/dark mode -->
  <span class="text">
    <slot />
  </span>
</a>

<style>
  .resource-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    border-radius: 8px;
    transition: all 0.2s ease;
    color: inherit;
    text-decoration: none;
  }

  .resource-link:hover {
    background-color: var(--sl-color-gray-2);
    transform: translateY(-2px);
  }

  .icon {
    display: block;
    width: 24px;
    height: 24px;
    background-size: contain;
  }
</style>
